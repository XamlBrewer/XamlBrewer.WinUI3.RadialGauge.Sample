    <Style TargetType="controls:RadialGauge">
        <Setter Property="NeedleBrush"
                Value="{ThemeResource RadialGaugeNeedleBackground}" />
        <Setter Property="NeedleBorderBrush"
                Value="{ThemeResource RadialGaugeNeedleBorderBrush}" />
        <Setter Property="TrailBrush"
                Value="{ThemeResource RadialGaugeTrailBackground}" />
        <Setter Property="ScaleBrush"
                Value="{ThemeResource RadialGaugeScaleBackground}" />
        <Setter Property="ScaleTickBrush"
                Value="{ThemeResource RadialGaugeScaleTickBackground}" />
        <Setter Property="TickBrush"
                Value="{ThemeResource RadialGaugeTickBackground}" />
        <Setter Property="Foreground"
                Value="{ThemeResource RadialGaugeValueForeground}" />
        <Setter Property="UseSystemFocusVisuals"
                Value="True" />
        <Setter Property="FlowDirection"
                Value="LeftToRight" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:RadialGauge">
                    <Grid x:Name="PART_RootGrid">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="PART_RootGrid.Opacity"
                                                Value="0.4" />
                                    </VisualState.Setters>

                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Viewbox>
                            <Grid x:Name="PART_Container"
                                  Width="200"
                                  Height="200"
                                  Background="Transparent">


                                <!--  Scale  -->
                                <Path Name="PART_Scale"
                                      Stroke="{TemplateBinding ScaleBrush}"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"
                                      StrokeStartLineCap="Round"
                                      StrokeThickness="{TemplateBinding ScaleWidth}" />

                                <!--  Trail  -->
                                <Path Name="PART_Trail"
                                      Stroke="{TemplateBinding TrailBrush}"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"
                                      StrokeStartLineCap="Round"
                                      StrokeThickness="{TemplateBinding ScaleWidth}" />

                                <!--  Value and Unit  -->
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Spacing="2">
                                    <TextBlock Name="PART_ValueText"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{TemplateBinding Foreground}"
                                               TextAlignment="Center" />
                                    <TextBlock Name="PART_UnitText"
                                               Margin="0"
                                               Foreground="{ThemeResource RadialGaugeUnitForeground}"
                                               Text="{TemplateBinding Unit}"
                                               TextAlignment="Center" />
                                </StackPanel>
                            </Grid>
                        </Viewbox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

